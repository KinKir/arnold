apiVersion: v1
kind: Route
metadata:
  labels:
    app: "richie-{{ deploy_flag }}"
    version: "{{ richie_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "richie-{{ deployment_stamp }}"
  namespace: "{{ project_name }}"
spec:
  host: {{ richie_host }}
  port:
    targetPort: {{ richie_port }}-tcp
  tls:
    termination: edge
  to:
    kind: Service
    name: "nginx-{{ deploy_flag }}"
    weight: 100
