apiVersion: v1
kind: DeploymentConfig
metadata:
  labels:
    app: nginx
  name: nginx
  namespace: "{{ project_name }}"
spec:
  replicas: 1
  selector:
    app: nginx
    deploymentconfig: nginx
  template:
    metadata:
      labels:
        app: nginx
        deploymentconfig: nginx
    spec:
      containers:
      - image: fundocker/openshift-nginx:1.13
        name: nginx
        ports:
        - containerPort: 80
          protocol: TCP
        volumeMounts:
        - name: volume-conf
          mountPath: /etc/nginx/conf.d
          readOnly: true
      volumes:
      - name: volume-conf
        configMap:
          name: nginx
