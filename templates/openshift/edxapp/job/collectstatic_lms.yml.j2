apiVersion: batch/v1
kind: Job
metadata:
  name: edxapp-collecstatic-lms-{{ deployment_stamp }}
  namespace: "{{ project_name }}"
  labels:
    app: edxapp-lms
    version: "{{ edxapp_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
spec:
  template:
    metadata:
      name: edxapp-collecstatic-lms-{{ deployment_stamp }}
      labels:
        app: edxapp-lms
        version: "{{ edxapp_tag }}"
        deployment_stamp: "{{ deployment_stamp }}"
    spec:
      containers:
      - name: edxapp-collecstatic-lms
        image: "{{ edxapp_image }}:{{ edxapp_tag }}"
        command: ["python", "manage.py", "lms", "collectstatic", "--noinput", "--settings", "docker_run", "lms"]
        volumeMounts:
        - mountPath: /config
          name: edxapp-config
        - mountPath: /edx/var/edxapp/static
          name: edxapp-v-static
      volumes:
      - name: edxapp-config
        configMap:
          defaultMode: 420
          name: edxapp
      - name: edxapp-v-static
        persistentVolumeClaim:
          claimName: edxapp-pvc-static
      restartPolicy: Never
