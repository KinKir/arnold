apiVersion: batch/v1
kind: Job
metadata:
  name: edxapp-dbmigrate-cms
  namespace: "{{ project_name }}"
spec:
  template:
    metadata:
      name: edxapp-dbmigrate-cms
    spec:
      containers:
      - name: edxapp-dbmigrate-cms
        image: "{{ edxapp_image }}:{{ edxapp_tag }}"
        command: ["python", "manage.py", "cms", "migrate", "--settings", "docker_run"]
        volumeMounts:
        - mountPath: /config
          name: edxapp-config
      volumes:
      - name: edxapp-config
        configMap:
          defaultMode: 420
          name: edxapp
      restartPolicy: Never
