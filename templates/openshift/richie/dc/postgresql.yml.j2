apiVersion: v1
kind: DeploymentConfig
metadata:
  labels:
    app: postgresql
  name: postgresql-richie
  namespace: "{{ project_name }}"
spec:
  replicas: 1
  selector:
    app: postgresql
    deploymentconfig: postgresql
  template:
    metadata:
      labels:
        app: postgresql
        deploymentconfig: postgresql
    spec:
      containers:
        - image: centos/postgresql-96-centos7
          name: postgresql
          ports:
          - containerPort: "5432"
            protocol: TCP
          env:
            - name: POSTGRESQL_DATABASE
              value: "{{ richie_database.name }}"
            - name: POSTGRESQL_USER
              value: "{{ richie_database.user }}"
            - name: POSTGRESQL_PASSWORD
              value: "{{ richie_database.password }}"
