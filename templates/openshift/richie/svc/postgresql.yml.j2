apiVersion: v1
kind: Service
metadata:
  labels:
    app: postgresql-richie
    version: "{{ postgresql_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  # name of the service should be database host name in settings
  name: "{{ richie_database.host }}"
  namespace: "{{ project_name }}"
spec:
  ports:
  - name: 5432-tcp
    port: 5432
    protocol: TCP
    targetPort: 5432
  selector:
    deploymentconfig: "postgresql-richie-{{ deployment_stamp }}"
  type: ClusterIP
