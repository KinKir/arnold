apiVersion: v1
kind: Service
metadata:
  labels:
    app: edxapp-cms
    version: "{{ edxapp_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
  name: "edxapp-cms-{{ deployment_stamp }}"  # name of the service should be host name in nginx
  namespace: "{{ project_name }}"
spec:
  ports:
  - name: 8000-tcp
    port: 8000
    protocol: TCP
    targetPort: 8000
  selector:
    deploymentconfig: "edxapp-cms-{{ deployment_stamp }}"
  type: ClusterIP
